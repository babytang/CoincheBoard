<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    tools:context=".PlayFragment" >

    <LinearLayout
        android:id="@+id/teamOnePlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/teamOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/teamOneScore"
            android:inputType="number" />

        <EditText
            android:id="@+id/teamOneBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/teamOneBonus"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/teamOneBelote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belote" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teamTwoPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/teamTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/teamTwoScore"
            android:inputType="number" />

        <EditText
            android:id="@+id/teamTwoBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/teamTwoBonus"
            android:inputType="number" />

        <Button
            android:id="@+id/teamTwoBelote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belote" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teamThreePlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/teamThreeScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/teamThreeScore"
            android:inputType="number" />

        <EditText
            android:id="@+id/teamThreeBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/teamThreeBonus"
            android:inputType="number" />

        <Button
            android:id="@+id/teamThreeBelote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/belote" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/dogScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="@string/dogScore"
            android:inputType="number" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/validButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/valid" />
    </LinearLayout>

</LinearLayout>